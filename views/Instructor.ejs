        <% tests.forEach(test => { %>
        <tr>
          <td class="px-4 py-4 text-sm font-medium">
            <div>
              <h2 class="font-medium text-gray-800">Test ID: <%= test.test_id %></h2>
              <% const currentDate = new Date(); %>
              <% const endDate = new Date(test.end_date); %>
              <% if (currentDate > endDate) { %>
                <h2 class="font-medium text-gray-800">Status: Yet to complete</h2>
              <% } else { %>
                <h2 class="font-medium text-gray-800">Status: Completed</h2>
              <% } %>
            </div>
          </td>
          <td class="px-4 py-4 text-sm font-medium">
            <div>
              <% if (currentDate > endDate) { %>
                <a href="/api/results/<%= test.test_id %>?name=<%= name %>">
                  <button class="block text-black text-sm shadow-border bg-blue hover:bg-blue-dark text-sm py-3 px-4 font-sans tracking-wide uppercase font-bold">
